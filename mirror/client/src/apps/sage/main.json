{
  "id": "sage_main",
  "name": "SAGE Main Viewport",
  "app": "sage",
  "viewports": {
    "viewport1": [
      {
        "type": "Stack",
        "props": {
          "direction": "vertical",
          "gap": 6
        },
        "children": [
          {
            "type": "Stack",
            "props": {
              "direction": "horizontal",
              "gap": 3,
              "align": "center"
            },
            "children": [
              {
                "type": "Text",
                "props": {
                  "text": "SAGE Governance Dashboard",
                  "as": "h1",
                  "className": "text-3xl font-bold"
                }
              },
              {
                "type": "Badge",
                "props": {
                  "text": "Active",
                  "variant": "default"
                }
              }
            ]
          },
          {
            "type": "Tabs",
            "props": {
              "defaultTab": "pending"
            },
            "children": [
              {
                "type": "TabPanel",
                "props": {
                  "id": "pending",
                  "label": "Pending Validations"
                },
                "children": [
                  {
                    "type": "Text",
                    "props": {
                      "text": "Pending governance validations will be displayed here.",
                      "className": "text-muted-foreground"
                    }
                  }
                ]
              },
              {
                "type": "TabPanel",
                "props": {
                  "id": "decisions",
                  "label": "Recent Decisions"
                },
                "children": [
                  {
                    "type": "Text",
                    "props": {
                      "text": "Recent governance decisions will be displayed here.",
                      "className": "text-muted-foreground"
                    }
                  }
                ]
              },
              {
                "type": "TabPanel",
                "props": {
                  "id": "coherence",
                  "label": "Coherence Monitor"
                },
                "children": [
                  {
                    "type": "Text",
                    "props": {
                      "text": "System coherence metrics will be displayed here.",
                      "className": "text-muted-foreground"
                    }
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}
